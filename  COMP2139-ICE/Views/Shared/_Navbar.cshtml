@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
    <div class="container-fluid">
        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">COMP2139_ICE</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
            
            <!-- Lab 6 -->
            <!-- Search Form -->
            <!-- Lab 6 - Search Form in Navbar -->
            <form class="d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="GeneralSearch" method="get">
                <div class="input-group">
                    <!-- Search Input -->
                    <input class="form-control me-2" type="text" placeholder="Search..." name="searchString" required>

                    <!-- Dropdown for Search Type -->
                    <select class="form-select me-2" name="searchType" required>
                        <option value="" disabled selected>Select Search Type</option>
                        <option value="Projects">Projects</option>
                        <option value="Tasks">Tasks</option>
                    </select>

                    <!-- Search Button -->
                    <button class="btn btn-outline-success" type="submit">
                        <i class="fa fa-search"></i> Search
                    </button>
                </div>
            </form>
            
            <ul class="navbar-nav flex-grow-1">
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index"><i class="fa fa-home"></i> Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="About"><i class="far fa-address-card"></i> About</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="ProjectManagement" asp-controller="Project" asp-action="Index"><i class="far fa-address-card"></i> Project</a>
                </li>
                
                @if (SignInManager.IsSignedIn(User))
                {
                    <li class="nav-item">
                        <a class="nav-link text-dark"
                           asp-area="Identity"
                           asp-page="/Account/Manage/Index" title="Manage your account"><i class="fa fa-user-circle"></i> Profile</a>
                    </li>

                    <li class="nav-item">
                        <form asp-area="Identity" asp-page="/Account/Logout" method="post">
                            <button type="submit" class="nav-link btn btn-link text-dark" style="cursor:pointer">Logout</button>
                        </form>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="Identity"
                           asp-page="/Account/Login"><i class="fa fa-sign-in-alt"></i> Login</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="Identity"
                           asp-page="/Account/Register"><i class="fa fa-user-plus"></i> Register</a>
                    </li>
                }
            </ul>
            
        </div>
    </div>
</nav>